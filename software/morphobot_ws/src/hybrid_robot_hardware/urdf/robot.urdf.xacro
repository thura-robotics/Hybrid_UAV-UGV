      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <!-- Servo 6 -->
    <joint name="servo_joint_6">
      <command_interface name="position">
        <param name="min">0</param>
        <param name="max">6.28</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <!-- Servo 7 -->
    <joint name="servo_joint_7">
      <command_interface name="position">
        <param name="min">0</param>
        <param name="max">6.28</param>
      </command_interface>
      <state_interface name="position"/>
